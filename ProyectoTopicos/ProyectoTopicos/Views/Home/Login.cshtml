@{
                /**/

                ViewBag.Title = "Login";
                Layout = "";
}

<!--
Proyecto Tópicos Selectos de Computadoras.
Ventana Login.
Donde se pueda eligir el usuario (usuario administrador del sistema, usuario de la custodia, usuario invitado).
-->


<!DOCTYPE HTML>
<HEAD>
    <html lang="es" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>
        .jumbotron {
            background-color: green;
            color: #ffffff;
        }

        .logo {
            font-size: 200px;
        }
    </style>

</HEAD>
<BODY>
    <div class="jumbotron text-center">
        <h1>Universidad Latina de Costa Rica</h1>
        <p>La mejor universidad privada del país</p>
    </div>

    <div class="container-fluid bg-grey text-center">
        <span class="glyphicon glyphicon-globe logo"></span>

        <div class="container text-center">
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @ViewBag.Mensaje
                </div>
            }

            <div>

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    
                    <div class="form-group row">

                        <label class="col-md-2" for="nombreDeUsuario">Usuario:</label>

                        <div class="col-md-10">
                            <select name="TipoCuenta" class="form-control" id="TipoCuenta">
                                <option value="Adm">Administrador</option>
                                <option value="Cus">Custodia</option>
                                <option value="Inv">Invitado</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">


                        <label for="contrasenna" class="col-md-2"><b> Contraseña: </b></label>

                        <div class="col-md-10">
                            <input type="password" class="form-control" placeholder="Ingresa tu contraseña" name="Contrasenna" id="Contrasenna" required>
                        </div>
                    </div>


                    <input class="btn btn-success btn-md" type="submit" name="SUBMITBUTTON" value="Ingresar" />
                    <button type="button" class="btn btn-success btn-md">¿Has olvidado tu contraseña?</button>

                }
            </div>

            <br>
            <p class="text-center">O ingresar mediante los siguientes proveedores:</p>

            

            <button type="button" class="btn btn-default">Gmail</button>
            <button type="button" class="btn btn-default">Facebook</button>
            <br>
            <br>

        </div>
        <div class="container body-content">

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Universidad Latina CR</p>
            </footer>
        </div>

        <br>

        

</BODY>
</HTML>

<script src="http://code.jquery.com/jquery-3.0.0.min.js"></script>
<script>
    $('#link').on('submit', function (e) {
        e.preventDefault();
        var $form = $(this),
            $select = $form.find('select'),
            links = $select.val();
        if (links.length > 0) {
            for (i in links) {
                link = links[i];
                window.open(link);
            }
        }
    });
</script>
